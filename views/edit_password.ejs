<%- include('header') %> 
      
    <div class="container-fluid">


      <div class="row justify-content-center">
        <div class="col-md-6 bg-primary text-white">
          <h2>Edit Password</h2>
        </div>
      </div>

      <div class="row justify-content-center mb-2">
        <div class="col-md-6 border border-info pb-2 pt-5">
          <% if(success != ''){  %> 
            <p><%= success  %> </p>
            <% } %> 
          <form action="/ps/edit/<%= record._id %>" method="post">
            <div class="mb-3">
              <label for="pass_cat" class="form-label">Category</label>
              <select class="form-select" aria-label="Default select example" name="pass_cat">
                <option value="">--select--</option>
                <% if(records.length > 0){ 
                  records.forEach((row)=>{ %> 
                <option value="<%= row.ps_cat %>" <% if(row.ps_cat == record.ps_cat){  %> selected <% } %>> <%= row.ps_cat %></option>
                <% }) }%>
              </select>
            </div>
            <div class="mb-3">
            <label for="pro_name">Project Name</label>
            <input type="text" name="pro_name" class="form-control" value="<%= record.pro_name %>">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <textarea id="editor" class="form-control" name="password" cols="30" rows="6"
                placeholder="Enter Your password details"><%= record.ps_details %></textarea>

            </div>
            <input type="hidden" name="id" value="<%= record._id %>">


            <button type="submit" class="btn btn-primary">Update Password</button>
            
          </form>
        </div>
      </div>

    </div>
    <script>
      CKEDITOR.replace( 'editor');
    </script>

    <%- include('footer') %> 
